<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
                android:layout_width="412dp"
                android:layout_height="match_parent"
                android:background="@drawable/item_row_selector"
                android:padding="15dp">

            <ImageView
                    android:id="@+id/thumbnail"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="8dp" android:src="@drawable/ic_delivery"/>


            <TextView
                    android:id="@+id/textLoad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/thumbnail"
                    android:layout_toRightOf="@+id/thumbnail"
                    android:textSize="@dimen/title"
                    android:text="1Ton Truck"
                    android:textStyle="bold" android:layout_marginLeft="28dp" android:layout_marginTop="0dp"/>


            <TextView
                    android:id="@+id/textDecOne"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textLoad"
                    android:layout_marginTop="0dp"
                    android:text="Basic appliance"
                    android:layout_toRightOf="@+id/thumbnail"
                    android:textSize="@dimen/rating" android:layout_marginLeft="28dp"/>


            <TextView
                    android:id="@+id/textDecTwo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textDecOne"
                    android:layout_marginTop="4dp"
                    android:text="Quick loading"
                    android:layout_toRightOf="@+id/thumbnail"
                    android:textColor="@color/genre"
                    android:textSize="@dimen/genre" android:layout_marginLeft="28dp"/>


            <TextView
                    android:id="@+id/textDecThree"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textDecTwo"
                    android:layout_marginTop="3dp"
                    android:text="Easy access"
                    android:layout_toRightOf="@+id/thumbnail"
                    android:textColor="@color/genre"
                    android:textSize="@dimen/genre" android:layout_marginLeft="28dp"/>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
