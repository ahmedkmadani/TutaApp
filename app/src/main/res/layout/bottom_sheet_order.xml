<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/bottom_sheet"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#fff"
              android:orientation="vertical"
              android:padding="@dimen/activity_margin"
              app:behavior_hideable="true"
              app:behavior_peekHeight="56dp"
              app:layout_behavior="android.support.design.widget.BottomSheetBehavior">


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Pick Up Address"
            android:textColor="#444"
            android:textStyle="bold"/>

    <TextView
            android:id="@+id/txt_pickup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:background="#9e9e9e"
            android:layout_gravity="center_vertical"
            android:weightSum="30"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Drop off Address"
            android:textColor="#444"
            android:textStyle="bold"/>

    <TextView
            android:id="@+id/edit_drop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    />


    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:background="#9e9e9e"
            android:layout_gravity="center_vertical"
            android:weightSum="3"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/txtCarNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginRight="4dp"
                android:foreground="?attr/selectableItemBackground"
                android:text="R780"
                android:textColor="#bdbdbd"/>

        <TextView
                android:id="@+id/txtNolabour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:foreground="?attr/selectableItemBackground"
                android:text="1"
                android:textColor="#bdbdbd"/>

        <TextView
                android:id="@+id/txtTripPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:foreground="?attr/selectableItemBackground"
                android:text="20 RAND"
                android:textColor="#bdbdbd"/>


    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:background="#9e9e9e"
            android:layout_gravity="center_vertical"
            android:weightSum="3"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/txtTimeOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginRight="4dp"
                android:foreground="?attr/selectableItemBackground"
                android:text="5 mints"
                android:textColor="#bdbdbd"/>

        <TextView
                android:id="@+id/txtTruckType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:foreground="?attr/selectableItemBackground"
                android:text="5TON TRUCK"
                android:textColor="#bdbdbd"/>


    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <Button
                android:id="@+id/btn_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#000"
                android:layout_weight="1"
                android:layout_marginRight="4dp"
                android:foreground="?attr/selectableItemBackground"
                android:text="Back"
                android:textColor="#fff"/>

        <Button
                android:id="@+id/btn_confrim_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#000"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:foreground="?attr/selectableItemBackground"
                android:text="Confirm Order"
                android:textColor="#fff"/>


    </LinearLayout>
</LinearLayout>